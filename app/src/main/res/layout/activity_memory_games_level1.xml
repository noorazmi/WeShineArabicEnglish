<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relative_layout_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginTop="60dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/cart1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/front"/>

                <ImageView
                    android:id="@+id/blue1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/front"/>

                <ImageView
                    android:id="@+id/plate1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/front"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/blue2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/front"/>

                <ImageView
                    android:id="@+id/plate2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/front"/>

                <ImageView
                    android:id="@+id/cart2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/front"/>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/frmae"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp">

            <ImageView
                android:id="@+id/clock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/clock1"/>

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:text="1"
                android:textColor="#FF0F00"
                android:textSize="25sp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/textlay"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical|center_horizontal"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/congrat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:src="@drawable/congratulations"/>
        </RelativeLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/imageview_title"
        android:layout_width="@dimen/title_text_width"
        android:layout_height="@dimen/title_text_height"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="@dimen/margin_top_memory_games"
        android:src="@drawable/memory_game"/>

</FrameLayout>
